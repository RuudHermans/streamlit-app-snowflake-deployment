{
  "name": "Snowflake Streamlit Dev Container",
  "dockerFile": "Dockerfile",
  "context": "..",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-python.python",
    "ms-azuretools.vscode-docker"
  ],
  "forwardPorts": [8501],
  "postCreateCommand": "pip install -r app/requirements.txt",
  "remoteUser": "root"
}
